cd > env:olddir

IF NOT EXISTS ram:temp
makedir ram:temp
endif

copy /dummy_chip.xml ram:temp

cd ram:temp

idltool -a dummy_chip.xml

cd > env:thisdir
echo $thisdir

if exists dummy_chip_files
cd dummy_chip_files/
; replace default text set by IDLTOOL
rpl.exe -R "Hyperion Entertainment CVBA" "LiveForIt Software" >NIL:
rpl.exe -R "All Rights Reserved" "LGPL" >NIL:
endif 

cd $olddir
copy ram:temp/include/#? /include/  all
copy ram:temp/dummy_chip_vectors.c /
copy ram:temp/dummy_chip_vectors.h /
copy ram:temp/dummy_chip_files/dummy_chip_vectors.c ""
copy ram:temp/dummy_chip_files/dummy_chip_vectors.h ""
xcopy ram:temp/dummy_chip_files/main main NOREP ALL QUIET

delete QUIET ram:temp all 

